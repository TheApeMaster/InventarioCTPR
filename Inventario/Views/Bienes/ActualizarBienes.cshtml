@model Inventario.Models.Bienes
@using Inventario.Models
@{
    ViewBag.Title = "Actualizar Bienes";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<h2 class="text-center titulo">ActualizarBienes</h2>



@using (Html.BeginForm("BuscarBien","Bienes"))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <h3>Digite numero de patrimonio</h3>
        <div class="col-md-offset-2 col-md-10" >
            <input type="text" name="id" placeholder=@Html.DisplayFor(model => model.numeroDePatrimonio) >
        </div>
        <input type="submit" value="buscar"/>
    </div>
}

