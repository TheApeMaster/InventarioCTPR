<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Styles/layoutStyles.css"/>

</head>
<body>
    @*Inicio de contenido*@

    @*Cabecera de la pagina*@
    
    <div class="container-fluid" >
        <header class="row">
            <div class="col-xl-9 float">
               
                <h1 class="text-right">Inventario Colegio Tecnico Profesional Regional de San carlos</h1>
            </div>
            <div class="col-xl-3">
                <img src="~/imgs/cole.png" style="width: 70px"/>
            </div>
        </header>
    </div>

    @*Barra de navegacion*@
    <div class="container-fluid float">
                <ul class="nav nav-justified bgNaranja">
                    <li class="nav-item">@Html.ActionLink("Inicio","Index", "Home", null, new { @class = "nav-link text-dark" })</li>
                    <li class="nav-item">@Html.ActionLink("Ver Bienes", "VerBienes", "Bienes", null, new { @class = "nav-link text-dark" })</li>
                    <li class="dropdown">
                        <a href="#" class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" role="button">Administrar Bienes</a> 
                        <ul class="dropdown-menu bg-warning"role="menu"> 
                            @Html.ActionLink("Anadir Bienes", "AnadirBienes", "Bienes", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Actualizar Bienes", "ActualizarBienes", "Bienes", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Dar de baja Bienes", "DarBaja", "Bienes", null, new {@class = "dropdown-item"})
                        </ul>
                    </li>
                    <li class="nav-item">@Html.ActionLink("Administrar Usuarios", "Index", "Home",null, new { @class = "nav-link text-dark" })</li>
                    <li class="nav-item">@Html.ActionLink("Generar Reporte", "Index", "Home",null, new { @class = "nav-link text-dark" })</li>
                </ul>
     </div>
    
    @*Contenido de otras vistas*@
    <div class="container justify-content-center">
        @RenderBody()
    </div>

    @*Scripts de Bootstrap*@
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
</body>
</html>
